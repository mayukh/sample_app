<table class = "profile" summary = "Profile information">
	<tr>
		<td class = "main">
			<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
			</h1>
			<% if @user.microposts.any? %>
			  <table class = "microposts" summary = "User microposts">
			    <%= render @microposts %>
			  </table>
			  <%= will_paginate @microposts %>
			<% end %>
		</td>
		<%= render 'shared/sidebar',  :user => @user %>
	</tr>
</table>

